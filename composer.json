{
  "name": "monkeyscloud/monkeyslegion-migration",
  "description": "Entity-schema diff engine and SQL migration runner.",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.4",
    "monkeyscloud/monkeyslegion-core": "^1.0",
    "monkeyscloud/monkeyslegion-di": "^1.0",
    "monkeyscloud/monkeyslegion-entity": "^1.0",
    "monkeyscloud/monkeyslegion-database": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "MonkeysLegion\\Migration\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MonkeysLegion\\Migration\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration",
    "test:coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src tests --level=8",
    "cs": "phpcs --standard=PSR12 src tests",
    "cs-fix": "phpcbf --standard=PSR12 src tests",
    "check": [
      "@cs",
      "@phpstan",
      "@test"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  }
}